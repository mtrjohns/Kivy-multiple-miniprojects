#:kivy 2.0

# Button that applies to every button
<Button>
    #font_size: 32
    background_normal: ""
    background_color: (0,0,1,1)

<TextInput>
    background_normal: ""
    background_color: (150/255,150/255,150/255,1)

<Label>
    # can be picked up by other widgets that have the same elements
    font_size: 32

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        # Widgets expand to the size of our app
        size: root.width, root.width
        padding: 10
        spacing: 10

        Label:
            text: "Name"
        TextInput:
            multiline: False

        Label:
            text: "Favourite Pizza"
        TextInput:
            multiline: False

        Button:
            text: "Submit"
        Button:
            text: "Clear"
            background_color: (1,0,0,1)
