#:kivy 2.0

<MyLayout>
    id: my_widget
    BoxLayout:
        orientation: "vertical"
        # Widgets expand to the size of our app
        size: root.width, root.height
        
        padding: 50
        spacing: 20

        Image:
            id: my_image
            source: ""

        # FileChooseListView to show as directory list and not icons
        FileChooserIconView:
            id: filechooser
            # select the item clicked on in the filechooser
            on_selection: my_widget.selected(filechooser.selection)