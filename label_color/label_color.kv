#:kivy 2.0

# Button that applies to every button
<Button>
    #font_size: 32
    background_normal: ""
    background_color: (0,0,1,1)

<TextInput>
    background_normal: ""
    background_color: ("#808080")

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        # Widgets expand to the size of our app
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
            font_size: 45
            background_color: (0,0,1,1)
            # need a canvas to be able to change the label colour
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            # Text properties
            color: ("B642F5")
            bold: True
            italics: True
            # outline requires a width also
            outline_color: (0,0.5,1, 0.5)
            outline_width: 5

        TextInput:
            multiline: False

        Button:
            text: "Clear"
            background_color: (1,0,0,1)
