#:kivy 2.1.0

<MyLayout>

    BoxLayout:
        orientation: "vertical"
        # Widgets expand to the size of our app
        size: root.width, root.height

        padding: 50
        spacing: 20

        Label:
            id: my_label
            text: "Hello World!"
            font_size: 32

        Button:
            text: "Press Me!"
            font_size: 32
            size_hint: 0.5, 0.5
            pos_hint: {"center_x":0.5}

            # animation function for on_release of button
            on_release: root.animate_it(self)
