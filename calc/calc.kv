#:kivy 2.1.0

<MyLayout>
    # Float layout allows for explicit placing in proportion to the screen
    BoxLayout:
        orientation: "vertical"
        # Widgets expand to the size of our app
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size: 65
            size_hint: (1, 0.15)

        GridLayout:
            cols: 4
            rows: 5

            # Row 1
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "%"
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "CE"
            Button:
                id: clear
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "C"
                on_press: root.clear()
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "/"
                on_press: root.divide()

            # Row 2
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "7"
                background_color: ("#9D9D9D")
                on_press: root.button_press(7)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "8"
                background_color: ("#9D9D9D")
                on_press: root.button_press(8)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "9"
                background_color: ("#9D9D9D")
                on_press: root.button_press(9)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "*"
                on_press: root.multiply()

                
            # Row 3
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "4"
                background_color: ("#9D9D9D")
                on_press: root.button_press(4)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "5"
                background_color: ("#9D9D9D")
                on_press: root.button_press(5)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "6"
                background_color: ("#9D9D9D")
                on_press: root.button_press(6)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "-"
                on_press: root.subtract()

            # Row 4
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "1"
                background_color: ("#9D9D9D")
                on_press: root.button_press(1)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "2"
                background_color: ("#9D9D9D")
                on_press: root.button_press(2)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "3"
                background_color: ("#9D9D9D")
                on_press: root.button_press(3)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "+"
                on_press: root.add()

            # Row 5
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "+/-"
                background_color: ("#9D9D9D")
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "0"
                background_color: ("#9D9D9D")
                on_press: root.button_press(0)
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "."
                background_color: ("#9D9D9D")
            Button:
                size_hint: (0.2, 0.2)
                font_size: 32
                text: "="
                on_press: root.equals()
            