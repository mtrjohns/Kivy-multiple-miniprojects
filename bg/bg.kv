#:kivy 2.0

# Button that applies to every button
<Button>
    #font_size: 32
    background_normal: ""
    background_color: (0,0,1,1)

<TextInput>
    background_normal: ""
    background_color: ("#808080")

<MyLayout>
    BoxLayout:
        orientation: "vertical"
        # Widgets expand to the size of our app
        size: root.width, root.height
        padding: 10
        spacing: 10

        Label:
            text: "Name"
        TextInput:
            multiline: False

        Button:
            text: "Clear"
            background_color: (1,0,0,1)
